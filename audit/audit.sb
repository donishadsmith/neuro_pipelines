#!/bin/bash
#SBATCH --job-name=audit
#SBATCH --partition=cpu
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=2
#SBATCH --mem=4G
# Outputs ------------------------------------------------------------------
#SBATCH --output=/projects/bigos_lab/mph-study/code/logs/audit_%A_%a.out
#SBATCH --error=/projects/bigos_lab/mph-study/code/logs/audit_%A_%a.err
# --------------------------------------------------------------------------

PYTHON="/projects/bigos_lab/envs/py313/bin/python"

BIDS_DIR="/projects/bigos_lab/mph-study/kids/dset"
DERIV_DIR="$BIDS/fmriprep-25.2.3"
ANALYSIS_DIR=""
OUT_DIR="$HOME/audit_csv_files"
mkdir -p $OUT_DIR

CMD="${PYTHON} audit.py --bids_dir $BIDS_DIR --out_dir $OUT_DIR"

if [[ -n $DERIV_DIR ]]; then
	CMD+=" --deriv_dalir ${DERIV_DIR}"
fi

if [[ -n $ANALYSIS_DIR ]]; then
	CMD+=" --analysis_dir ${ANALYSIS_DIR}"
fi

echo $CMD
eval $CMD
